<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/img_view_startgame"
            android:layout_width="193dp"
            android:layout_height="61dp"
            android:src="@drawable/beginicon"
            android:layout_marginTop="100px"/>

        <LinearLayout
            android:id="@+id/ll_InitialLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                style="@style/Base.DialogWindowTitle.AppCompat"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_start"
                android:layout_marginBottom="10px"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="@drawable/round_button"
                android:text="@string/newGame" />

            <Button
                android:id="@+id/btn_JoinPlayer"
                android:background="@drawable/round_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Join other player" />

            <EditText
                android:id="@+id/et_amtSus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Set amount of suspects."
                android:textColor="#ffffff"
                android:visibility="invisible"
                android:textColorHint="#ffffff"/>

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:text="Continue game" />

            <Button
                android:id="@+id/btn_test"
                android:text="Start!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/txt_view_instructions"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="@string/instruction"
                android:textColor="#ffffff"

                android:textSize="25sp"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>