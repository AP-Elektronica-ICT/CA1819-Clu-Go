<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartGameActivity">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/img_view_startgame"
            android:layout_width="193dp"
            android:layout_height="61dp"
            android:src="@drawable/beginicon"
            android:layout_marginTop="100px"/>

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_start"
            android:layout_marginBottom="20px"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300px"
            android:background="@drawable/round_button"
            android:text="@string/newGame" />
        <EditText
            android:id="@+id/et_amtSus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Set amount of suspects."
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="Continue game" />

        <Button
            android:id="@+id/btn_test"
            android:text="Start!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/txt_view_instructions"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/instruction"
            android:textSize="25sp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />


    </LinearLayout>

</FrameLayout>